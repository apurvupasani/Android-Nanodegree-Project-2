<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/review_large_padding"
    android:paddingBottom="@dimen/review_large_padding"
    android:paddingLeft="@dimen/review_med_padding"
    android:paddingRight="@dimen/review_med_padding"
    android:background="@drawable/review_background">

    <TextView
        style="?android:attr/textAppearanceLarge"
        android:id="@+id/review_author_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/review_author_text_size"
        android:textStyle="normal|bold"
        android:contentDescription="Author Name"
        android:layout_weight="0.1"
        android:gravity="center"
        android:paddingBottom="@dimen/review_small_padding"/>

    <TextView
        android:id="@+id/review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:contentDescription="Review Content"
        android:layout_weight="0.9"
        style="?android:attr/textAppearanceMedium"
        android:paddingTop="@dimen/review_large_padding"
        android:paddingLeft="@dimen/review_large_padding"
        android:paddingRight="@dimen/review_large_padding"
        android:paddingBottom="@dimen/review_large_padding"
        android:background="@drawable/review_text_background"/>

</LinearLayout>